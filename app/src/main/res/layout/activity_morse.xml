<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/beige_background">

    <!--<ImageView-->
        <!--android:id="@+id/beige_backgroundImg"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/beige_background" />-->

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar" />

    <TextView android:id="@+id/print_message"
        android:layout_width="80dp"
        android:layout_height="40dp" />

    <EditText android:id="@+id/enter_message"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:inputType="text"
        android:hint="@string/enter_message"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:layout_gravity="center_horizontal"
        android:onClick="sendMorseMessage" />

    <!--<Button-->
        <!--android:id="@+id/sos"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/sos"-->
        <!--android:layout_gravity="right"-->
        <!--android:onClick="SOS" />-->

    <!--<Button-->
        <!--android:id="@+id/stop"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/button_stop"-->
        <!--android:layout_gravity="left"-->
        <!--android:onClick="stop" />-->


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light"
        android:id="@+id/light"
        android:layout_gravity="center_horizontal" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beep"
        android:id="@+id/beep"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frequency_spinner"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
